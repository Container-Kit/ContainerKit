        "@tauri-apps/plugin-window-state": "~2.3.0",
        "dotenv": "^17.2.0",
        "drizzle-orm": "^0.44.3",
        "motion": "^12.23.5",
        "runed": "^0.28.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
