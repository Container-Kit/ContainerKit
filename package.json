{
    "name": "container-kit",
    "version": "0.1.0",
    "description": "",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "pnpm db:generate && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check .",
        "build:tauri": "tsx scripts/build-tauri.ts",
        "build:cli": "cd cli && go build -o ../bin/container-kit-cli .",
        "cli": "./bin/container-kit-cli",
        "cli:build": "pnpm build:cli && pnpm cli build",
        "cli:interactive": "pnpm build:cli && pnpm cli build --interactive",
        "cli:help": "pnpm build:cli && pnpm cli --help",
        "db:push": "drizzle-kit push",
        "db:generate": "drizzle-kit generate && pnpm db:migrations",
        "db:migrations": "tsx scripts/generate-migrations.ts",
        "db:studio": "drizzle-kit studio",
        "migration": "pnpm build:cli && pnpm cli migration",
        "migration:generate": "pnpm build:cli && pnpm cli migration generate",
        "migration:list": "pnpm build:cli && pnpm cli migration list",
        "migration:validate": "pnpm build:cli && pnpm cli migration validate",
        "migration:status": "pnpm build:cli && pnpm cli migration status"
    },
    "license": "MIT",
