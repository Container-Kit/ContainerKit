{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    {
      "identifier": "shell:allow-execute",
      "description": "Permission to run apple containers",
      "allow": [
        {
          "name": "container",
          "cmd": "container",
          "args": true
        }
      ]
    }
  ],
  "platforms": ["macOS"]
}
