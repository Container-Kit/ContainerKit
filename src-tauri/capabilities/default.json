{
  "$schema": "../gen/schemas/macOS-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:app:allow-default-window-icon",
    "opener:default",
    "os:default",
    "sql:default",
    "sql:allow-execute",
    "store:default",
    {
      "identifier": "shell:allow-execute",
      "description": "Permission to run apple containers",
      "allow": [
        {
          "name": "binaries/sidecar/apple-container/bin/container",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "description": "Permission to run apple containers",
      "allow": [
        {
          "name": "binaries/sidecar/apple-container/bin/container",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-kill",
      "description": "Permission to run apple containers",
      "allow": [
        {
          "name": "binaries/sidecar/apple-container/bin/container",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "description": "Permission to run apple containers",
      "allow": [
        {
          "name": "binaries/sidecar/apple-container/bin/container",
          "args": true,
          "sidecar": true
        }
      ]
    },

    "fs:default",
    "fs:allow-data-read-recursive",
    "fs:allow-data-read",
    {
        "identifier": "fs:allow-exists",
        "allow": [
          { "path": "$DATA/*" }
        ]
    },
    {
        "identifier": "fs:scope",
        "allow": [
          { "path": "/etc/resolver", "recursive": true }
        ]
    },
    "pty:allow-spawn",
    "pty:default"
  ],
  "platforms": [
    "macOS"
  ]
}
