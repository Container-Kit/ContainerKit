{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Container Kit",
    "mainBinaryName": "Container Kit",
    "version": "0.5.0",
    "identifier": "com.ethercorps.container-kit",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Container Kit",
                "width": 1200,
                "height": 900,
                "resizable": true,
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "shortDescription": "GUI for apple container CLI",
        "copyright": "Copyright (c) 2025 Container Kit - MIT License",
        "licenseFile": "../LICENSE",
        "category": "DeveloperTool",
        "macOS": {
	        "dmg": {
				"background": "./images/background.jpg",
                "appPosition": {
                    "x": 250,
                    "y": 200
                },
                "applicationFolderPosition": {
                    "x": 650,
                    "y": 200
                },
                "windowSize": {
                    "height": 500,
                    "width": 900
                }
            },
	        "files": {},
	        "hardenedRuntime": true,
	        "minimumSystemVersion": "26.0"
        },
        "externalBin": [
            "binaries/sidecar/apple-container/bin/container"
        ],
        "resources": ["migrations/*", "icons/icon.iconset/*", "binaries/sidecar/apple-container/**/*"],
        "createUpdaterArtifacts": true,
        "active": true,
        "targets": ["dmg", "app"],
        "icon": [
            "icons/icon.png",
            "icons/icon.iconset/icon_16x16.png",
            "icons/icon.iconset/icon_16x16@2x.png",
            "icons/icon.iconset/icon_32x32.png",
            "icons/icon.iconset/icon_32x32@2x.png",
            "icons/icon.iconset/icon_128x128.png",
            "icons/icon.iconset/icon_128x128@2x.png",
            "icons/icon.iconset/icon_256x256.png",
            "icons/icon.iconset/icon_256x256@2x.png",
            "icons/icon.iconset/icon_512x512.png",
            "icons/icon.iconset/icon_512x512@2x.png",
            "icons/icon.icns"
        ]
    },
    "plugins": {
        "sql": {
            "preload": ["sqlite:container-kit.db"]
        },
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU3NzMwMDE5MkI4RjNGODcKUldTSFA0OHJHUUJ6Vjd2VDRnZHNFdGM0akhMd2NNSnR6dDBsQXkxRnBaYnJSQThrNnBtNDY3VkQK"
        }
    }
}
