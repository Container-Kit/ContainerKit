{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Container Kit",
    "version": "0.1.0",
    "identifier": "com.container-kit.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Container Kit",
                "width": 1200,
                "height": 900,
                "resizable": true,
                "hiddenTitle": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["app", "dmg"],
        "icon": [
            "icons/icon.iconset",
            "icons/icon.icns"
        ]
    }
}
